{
  "name": "firetap",
  "version": "1.0.0-alpha.6",
  "description": "Real-time collaborative editing adapter for TipTap, Yjs, and Firebase Realtime Database",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "collaborative-editing",
    "yjs",
    "tiptap",
    "firebase",
    "realtime",
    "webrtc",
    "crdt",
    "collaboration",
    "editor"
  ],
  "author": "Miguel Rivas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrivasperez/firetap.git",
    "directory": "lib"
  },
  "bugs": {
    "url": "https://github.com/mrivasperez/firetap/issues"
  },
  "homepage": "https://github.com/mrivasperez/firetap#readme",
  "peerDependencies": {
    "firebase": "^12.4.0",
    "y-protocols": "^1.0.6",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3"
  }
}
